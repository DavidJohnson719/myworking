<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="mataam.com.mataam.MainActivity"
   >

    <LinearLayout
        android:id="@+id/lv_lunch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        android:background="@color/colorGreen">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/splash_combined_shape"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/splash_fill_7"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle33x"
        android:orientation="vertical"
        android:weightSum="2"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/combined_shape"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:src="@drawable/fill_7"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/corner_radius_white"
                android:textSize="@dimen/text_size"
                android:textColor="@android:color/black"
                android:layout_margin="15dp"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:inputType="phone"
                android:hint="Phone Number"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/corner_radius_white"
                android:hint="Password"
                android:paddingLeft="15dp"
                android:textSize="@dimen/text_size"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <LinearLayout
                android:id="@+id/login_keep_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/login_check_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/check_no"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:text="Keep me logged in"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/corner_radius_green">

                <TextView
                    android:id="@+id/login_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:text="LOGIN"
                    android:textColor="@android:color/white"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn_register">
                <TextView
                    android:id="@+id/login_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="REGISTER"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
