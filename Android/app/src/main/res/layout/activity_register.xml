<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle33x"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context="mataam.com.mataam.RegisterActivity">

    <RelativeLayout
        android:id="@+id/register_topView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@android:color/transparent"
        >
        <TextView
            android:id="@+id/register_top_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Register new account"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            />

        <LinearLayout
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/back3x"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <EditText
            android:id="@+id/register_txt_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/corner_radius_white"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/black"
            android:layout_margin="15dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:inputType="phone"
            android:hint="Phone Number"/>
        <EditText
            android:id="@+id/register_txt_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/corner_radius_white"
            android:hint="Name Lastname"
            android:paddingLeft="15dp"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            />
        <EditText
            android:id="@+id/register_txt_pwd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/corner_radius_white"
            android:hint="Password"
            android:paddingLeft="15dp"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            />
        <EditText
            android:id="@+id/register_txt_confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/corner_radius_white"
            android:hint="Confirm Password"
            android:paddingLeft="15dp"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            />
        <EditText
            android:id="@+id/register_txt_email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/corner_radius_white"
            android:hint="Email (optional)"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/register_img_check"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/check_green"
                    android:layout_marginTop="3dp"
                   />
                <TextView
                    android:id="@+id/register_txt_keep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:text="I agree to the Privacy Policy\nand Terms And Conditions"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/corner_radius_green">
            <TextView
                android:id="@+id/register_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="REGISTER"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
