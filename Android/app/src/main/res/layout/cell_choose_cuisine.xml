<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="horizontal"
    android:weightSum="2"
    >

    <LinearLayout
        android:id="@+id/cell_cusine_lv1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/gap_height"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/cell_cusine_img1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/check_green" />

        <TextView
            android:id="@+id/cell_cusine_txt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/gap_height"
            android:gravity="center_vertical"
            android:text="All (94)" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cell_cusine_lv2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/gap_height">

        <ImageView
            android:id="@+id/cell_cusine_img2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/check_green"/>
        <TextView
            android:id="@+id/cell_cusine_txt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="All (94)"
            android:layout_marginLeft="@dimen/gap_height"/>
    </LinearLayout>

</LinearLayout>
