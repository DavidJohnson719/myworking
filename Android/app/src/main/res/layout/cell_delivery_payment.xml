<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/gap_height">

        <ImageView
            android:id="@+id/cell_payment_img1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_check"/>
        <TextView
            android:id="@+id/cell_payment_title"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Potato Wedges + Pepsi"
            android:textSize="@dimen/text_size"
            android:layout_marginLeft="@dimen/gap_height"/>
    </LinearLayout>

    <TextView
        android:id="@+id/cell_payment_price"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical|right"
        android:text="KD 1000"
        android:textSize="@dimen/text_size"
        android:layout_marginRight="@dimen/gap_height"
        />


</RelativeLayout>
