<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/corner_radius"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="20dp"
       android:layout_marginLeft="@dimen/gap_height"
       android:layout_marginRight="@dimen/gap_height"
       android:layout_marginBottom="7dp">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent">
           <ImageView
               android:layout_width="10dp"
               android:layout_height="20dp"
               android:layout_marginRight="3dp"
               android:src="@drawable/star_green"/>
           <ImageView
               android:layout_width="10dp"
               android:layout_height="20dp"
               android:layout_marginRight="3dp"
               android:src="@drawable/star_green"/>
           <ImageView
               android:layout_width="10dp"
               android:layout_height="20dp"
               android:layout_marginRight="3dp"
               android:src="@drawable/star_green"/>
           <ImageView
               android:layout_width="10dp"
               android:layout_height="20dp"
               android:layout_marginRight="3dp"
               android:src="@drawable/star_green"/>
           <ImageView
               android:layout_width="10dp"
               android:layout_height="20dp"
               android:layout_marginRight="5dp"
               android:src="@drawable/star_green_no"/>
            <TextView
                android:id="@+id/cell_delivery_review_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Name LastName"
                android:textSize="10dp"
                android:textColor="@color/text_color"
                android:gravity="center"/>
       </LinearLayout>
       <TextView
           android:id="@+id/cell_delivery_review_txt_date"
           android:layout_width="wrap_content"
           android:layout_height="20dp"
           android:text="14 Feb 2017"
           android:textColor="@color/text_color"
           android:textSize="10dp"
           android:gravity="center"
           android:layout_alignParentRight="true"/>
   </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"></LinearLayout>

    <TextView
        android:id="@+id/cell_delivery_review_txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Big Juicy Wings in Barbecue, Hot or Regular flavor.\n Great choice Try it"
        android:textSize="10dp"
        android:layout_marginLeft="@dimen/gap_height"
        android:layout_marginRight="@dimen/gap_height"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/black"/>
</LinearLayout>
